filetype plugin indent on
syntax on
set encoding=utf-8
set background=dark
set autoindent
set shiftwidth=2
set softtabstop=2
set expandtab
set number
set relativenumber
set showcmd
set ruler
set modeline
set modelines=5
set incsearch
set hlsearch
set ignorecase
set noswapfile
set t_Co=256
set hidden
set nospell
autocmd FileType magit set spell
autocmd FileType gitcommit set spell
set wildmenu
set showmatch
set matchpairs=(:),{:},[:],<:>
set foldenable
set foldmethod=marker
set foldlevel=0
set modelines=0
set runtimepath^=~/.vim/bundle/asyncrun.vim/
set runtimepath^=~/.vim/bundle/nerdtree/
set runtimepath^=~/.vim/bundle/vimagit/
set runtimepath^=~/.vim/bundle/vim-airline/
set runtimepath^=~/.vim/bundle/vim-airline-themes/
let g:airline_theme='solarized'
let g:airline_solarized_bg='dark'
let g:airline_solarized_dark_text = 1
let g:airline_powerline_fonts = 1
let g:airline_skip_empty_sections = 1
set runtimepath^=~/.vim/bundle/vim-gitgutter/
let g:gitgutter_map_keys = 0
set runtimepath^=~/.vim/bundle/vim-rspec/
set updatetime=100
set runtimepath^=~/.vim/bundle/vim-localvimrc/
let g:localvimrc_whitelist=['/Users/bsa/repos/']
let g:localvimrc_sandbox=0
set runtimepath^=~/.vim/bundle/vim-gutentags/
set statusline+=%{gutentags#statusline()}
let g:gutentags_cache_dir='~/.ctagscache/'
set runtimepath^=~/.vim/bundle/ctrlp.vim/
if executable('ag')
  " Use Ag over Grep
  set grepprg=ag\ --nogroup\ --nocolor

  " Use ag in CtrlP for listing files. Lightning fast and respects .gitignore
  let g:ctrlp_user_command = 'ag %s -l --nocolor -g ""'
endif
:let mapleader = ","
" RSpec.vim mappings
map <Leader>t :call RunCurrentSpecFile()<CR>
map <Leader>s :call RunNearestSpec()<CR>
map <Leader>l :call RunLastSpec()<CR>
map <Leader>a :call RunAllSpecs()<CR>

inoremap jk <esc>
