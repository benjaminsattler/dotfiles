# key bindings
## create split
bind v split -v
bind s split

## move through splits
bind h focus left
bind k focus up
bind j focus down
bind l focus right

## resize splits
bind ^J resize +5
bind ^K resize -4

## remove current split
bind x remove

## rotate through layouts
bind " " layout next

## reload screen config
bind ^r source ~/.screenrc

## display windowlist
bind w windowlist -b

# disable copright notice
startup_message off

# enable colors
term screen-256color
# really, below is copypasta from
# http://robotsrule.us/vim/
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E38;5;%dm'
defbce "on"""']'""

# split caption line config
caption splitonly "%?%F%{ky} %n%f* %t %{yk}>%: %{ry} %n%f* %t %{yk} >%?%=" 

# automatically detach on terminal hangup
autodetach on

# ignore case on searches in copy-mode
ignorecase on

# assume UTF-8 encoding
defutf8 on

# command line colors
rendition so = yk

# backtick commands
backtick 1 30 30 $HOME/src/dotfiles/screen/batt_percentage_low.sh
backtick 2 30 30 $HOME/src/dotfiles/screen/batt_percentage.sh
backtick 3 5 5 $HOME/src/dotfiles/screen/ifstatus.sh

# window status line config
hardstatus alwayslastline "%{ky}%-Lw%{yk} %n%f* %t%{-}%+Lw%=< %3` < %?%{.r}%1`%%%{-}%:%2`%%%? < %D, %d %M %Y < %1c:%0s"

# layouts
layout autosave on
layout new single
select 1
layout new two
select 1
split
resize -v +8
focus down
select 4
focus up
layout new three
select 1
split
resize -v +7
focus down
select 3
split -v
resize -h +10
focus right
select 4
focus up
